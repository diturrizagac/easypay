<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.transfer.TransferAddActivity">

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/transaction_cca_account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/transfer_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What's up Diego?"
                android:gravity="center"
                android:textSize="30sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/transaction_transfer_send_from_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Send From Account"/>
        <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/transfer_from_accounts_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/transaction_transfer_send_to_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Send To Account"/>
    <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/transfer_to_accounts_spinner"
            android:layout_width="fill_parent"
            android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>
    <!--com.google.android.material.textfield.TextInputLayout
            android:id="@+id/transaction_transfer_sent_to_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/transfer_send_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Send To"/>
    </com.google.android.material.textfield.TextInputLayout!-->

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/transaction_cca_amount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/transfer_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:inputType="number"
                android:hint="Amount"
                android:digits="1234567890."
                android:paddingEnd="8dp"
                android:paddingStart="8dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!--com.google.android.material.button.MaterialButton
            android:id="@+id/transfer_continue_button_md"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTINUE MD"/-->
    <Button
            android:id="@+id/transfer_continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTINUE"/>


</LinearLayout>