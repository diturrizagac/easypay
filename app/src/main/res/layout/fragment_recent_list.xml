<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="center"
              tools:context=".ui.home.RecentListFragment">

    <androidx.cardview.widget.CardView
            android:id="@+id/transfer_recent"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

        <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_money_transfer_100"/>

        <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                style="@style/TextStyle1"
                android:hint="Transfers"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/payment_recent"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

        <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_wallet_100"/>

        <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                style="@style/TextStyle1"
                android:hint="Payments"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/withdrawal_recent"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

        <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_withdrawal_limit_100"/>

        <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                style="@style/TextStyle1"
                android:hint="Cardless Cash"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>